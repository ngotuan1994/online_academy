<div class="container">
    <section class="section h-100 d-flex flex-column justify-content-center">
        <h2 class="section-heading h1 pt-4">Contact us</h2>
        <p class="section-description">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Fugit, error amet
            numquam iure provident voluptate
            esse quasi, veritatis totam voluptas nostrum quisquam eum porro a pariatur accusamus veniam. Quia, minima?
        </p>
        <div class="row">
            <div class="col-md-8 col-xl-9">
                <form id="contact-form" name="contact-form">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="md-form">
                                <div class="md-form">
                                    <label for="name" class="">Your name</label>
                                    <input type="text" id="name" name="name" class="form-control">
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="md-form">
                                <div class="md-form">
                                    <label for="email" class="">Your email</label>
                                    <input type="text" id="email" name="email" class="form-control">
                                </div>
                            </div>
                        </div>

                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="md-form">
                                <label for="subject" class="">Subject</label>
                                <input type="text" id="subject" name="subject" class="form-control">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <label for="message">Your message</label>
                            <div class="md-form">
                                <textarea type="text" id="message" name="message" class="md-textarea"></textarea>
                            </div>
                        </div>
                    </div>
                </form>
                <div class="center-on-small-only">
                    <a class="btn btn-primary">Send</a>
                </div>
            </div>
            <div class="col-md-4 col-xl-3">
                <ul class="contact-icons">
                    <li><i class="fa fa-map-marker fa-2x"></i>
                        <p>Los Angeles, CA 90013, USA</p>
                    </li>

                    <li><i class="fa fa-phone fa-2x"></i>
                        <p>+1-234-567-8900</p>
                    </li>

                    <li><i class="fa fa-envelope fa-2x"></i>
                        <p>support@learningacademy.com</p>
                    </li>
                </ul>
            </div>
        </div>
    </section>
</div>